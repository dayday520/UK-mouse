<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

       <ImageView
           android:id="@+id/imageView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/aa"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <WebView
           android:layout_width="156dp"
           android:layout_height="113dp"
           android:id="@+id/webView1"
           android:layout_gravity="center"
           android:focusable="false"
           android:layout_below="@+id/easybutton"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />

    <WebView
        android:layout_width="156dp"
        android:layout_height="113dp"
        android:id="@+id/webView2"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_below="@+id/easybutton"
        android:layout_toLeftOf="@+id/webView1" />

    <WebView
        android:layout_width="156dp"
        android:layout_height="113dp"
        android:id="@+id/webView3"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_above="@+id/entertainbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



       <ImageButton
           android:layout_width="126dp"
           android:layout_height="68dp"
           android:padding="0dp"
           android:id="@+id/hardbutton"
           android:src="@drawable/hardbutton_selector"
           android:layout_below="@+id/entertainbutton"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_alignBottom="@+id/webView2"
           android:layout_toLeftOf="@+id/easybutton"
           android:layout_toStartOf="@+id/easybutton" />

       <ImageButton
           android:layout_width="132dp"
           android:layout_height="68dp"
           android:id="@+id/entertainbutton"
           android:src="@drawable/entertainbtn_selector"
           android:layout_above="@+id/webView2"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_alignTop="@+id/easybutton"
           android:layout_toStartOf="@+id/easybutton"
           android:layout_toLeftOf="@+id/easybutton" />

       <ImageButton
           android:layout_width="217dp"
           android:layout_height="111dp"
           android:id="@+id/easybutton"
           android:src="@drawable/easybutton_selector"
           android:onClick="onClick"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />

</RelativeLayout>

