<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.juan.ukmouse">

    <application
        android:allowBackup="true"
        android:label="英国老鼠"
        android:icon="@mipmap/ic_launcher"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EasyActivity"
            android:label="Easymode">
            <intent-filter>
                <action android:name="com.litreily.Easymode"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".EntertainActivity"
            android:label="Entertain">
            <intent-filter>
                <action android:name="com.litreily.Entertain"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".HardActivity"
            android:label="Hardmode">
            <intent-filter>
                <action android:name="com.litreily.Hardmode"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".VideoplayActivity"
            android:label="Videoplay"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.litreily.Videoplay"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
